<div class="container text-center">
  <div class="row align-items-center vh-100">
    <form action="/login" method="POST" class="col-8 col-md-6 col-lg-4 mx-auto">
      <div class="login-title mb-4">
        <h2>Account Login</h2>
      </div>
      <div class="form-group mb-4">
        <label class="sr-only" for="email">Email</label>
        <input type="text" class="form-control form-control-lg" name="email" id="email" placeholder="Email">
      </div>
      <div class="form-group mb-5">
        <label class="sr-only" for="password">Password</label>
        <input type="password" class="form-control form-control-lg" name="password" id="password" placeholder="Password">
      </div>
      <button type="submit" class="btn btn-primary btn-lg col-4">Sign in</button>
    </form>
  </div>

</div>